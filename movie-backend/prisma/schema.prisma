datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  password     String
  role         Role       @default(USER)
  avatarUrl    String?
  favorites    Favorite[]
  movies       Movie[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Movie {
  id        Int      @id @default(autoincrement())
  title     String
  genre     String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Favorite {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  movieId    Int
  title      String
  posterPath String?
  genre      String?
  createdAt  DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
